<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
             x:Class="FindMe_Application.Views.BtServPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Title="BLE Services"
             Visual="Material"
             mc:Ignorable="d">
    
    <ContentPage.Content>
        
        <StackLayout Orientation="Vertical">
            
            <!-- Display selected BLE Device -->
            <Label Text="Selected BLE Device" x:Name="bleDevice"/>
            <Label Text="Services"/>
            <!-- The list below shows the services available on the selected BLE device -->
            <ListView x:Name="foundBleServs" ItemTapped="FoundBleServs_ItemTapped" />
            
        </StackLayout>
        
    </ContentPage.Content>
    
</ContentPage>